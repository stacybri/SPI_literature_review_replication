ggplot(pip_df, aes(x=mean_welfare, y=number_surveys)) +
  geom_text(aes(label=iso3c)) + 
  geom_smooth(method='lm') +
  ggpmisc::stat_poly_eq() +
  scale_x_log10(
    label=scales::comma
  ) 

estimatr::lm_robust(number_surveys ~ log(mean_welfare), data=pip_df)
estimatr::lm_robust(number_surveys ~ log(avg_mean_welfare), data=pip_df)
